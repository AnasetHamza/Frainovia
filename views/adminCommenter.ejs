<%- include layouts/header.ejs %>
<div id="wrapper">
            <div class="page-header"><h2><%=page_title%></h2></div>
            <div class="page-container">
        <div class="page-data">
            
            <form method="post" action="/admin/commenter/<%=data[0].fraisId%>">
                <table cellpadding="11">
                           <tr>
                    <td class="label" valign="top">Votre Commentaire</td>
                    <td valign="top">: 
                        <textarea name="commentaireAdmin" required cols="30" rows="5"></textarea>
                    </td>
                </tr>

                  <tr>
                    <td class="label" >Date du Frais</td>
                    <td>: <input type="date" name="date" disabled="true" value="<%=data[0].date%>"required></td>
                 </tr>
                <tr>
                    <td class="label">Libellé</td>
                    <td>: <input type="text" name="libelle" disabled="true" value="<%=data[0].libelle%>" required></td>
                 </tr>
                <tr>
                    <td class="label">Client</td>
                    <td>: <input type="text"  disabled="true" value="<%=data[0].client%>" name="client" required></td>
                </tr>
                <tr>
                    <td class="label">Type</td>
                    <td>:  
                        <select name="type" disabled="true" required>
                              <option value="voyage">Voyage</option>
                              <option value="transport">Transport</option>
                              <option value="hotel">Hotel</option>
                              <option value="restaurant">Restaurant</option>
                              <option value="divers">Divers</option>
                        </select>

                       <!--  <input type="text" name="phone" value="<%=data[0].type%>" required>-->
                    </td>
                 </tr>
                <tr>
                    <td class="label">Coût(€)</td>
                    <td>: <input type="text" disabled="true" value="<%=data[0].cout%>" name="cout" required></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Commentaires du Consultant</td>
                    <td valign="top">: 
                        <textarea name="commentaireConsultant" disabled="true" required cols="30" rows="5"><%=data[0].commentaireConsultant%></textarea>
                    </td>
                </tr>

         
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelCommentAdmin()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
